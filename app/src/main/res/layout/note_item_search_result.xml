<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background_light"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/noteItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/content_padding">

        <TextView
            android:id="@+id/noteDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/note_date_text"
            android:text="01-07-24"/>

        <TextView
            android:id="@+id/noteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/note_text_color"
            android:text="Це текст запису про вулик. Він може бути досить довгим і містити багато інформації."
            android:layout_marginTop="@dimen/spacing_small"/>

        <TextView
            android:id="@+id/noteTypeAndHive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/note_type_text"
            android:textStyle="italic"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Тип: Вулик №1 (Інформація)"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>