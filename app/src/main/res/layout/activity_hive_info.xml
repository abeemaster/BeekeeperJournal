<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    android:id="@+id/hive_info_root_layout"
    android:gravity="center_horizontal"
    tools:context=".HiveInfoActivity">

    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hive_info_title_default"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/title_dark_green"
        android:layout_marginBottom="@dimen/spacing_small"/>

    <!-- Контейнер для відображення записів (ScrollView для прокрутки) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/content_padding"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:elevation="2dp"
        android:background="@drawable/notes_area_background">

        <LinearLayout
            android:id="@+id/notesDisplayArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Записи будуть додані програмно -->
        </LinearLayout>
    </ScrollView>

    <!-- НОВЕ: Контейнер для кнопок "Новий запис" та "Мікрофон" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_small">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/newNoteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_record_button_text"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/add_note_button_color"
            android:paddingVertical="8dp"
            app:cornerRadius="12dp"
            android:stateListAnimator="@null"
            android:elevation="4dp"
            android:layout_marginEnd="@dimen/spacing_small" />

        <ImageButton
            android:id="@+id/microphoneBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"

            android:contentDescription="@string/voice_input_description"
            android:elevation="@dimen/button_elevation"
            android:scaleType="centerInside"
            android:src="@drawable/ic_mic"
            android:stateListAnimator="@null"
            android:background="@drawable/microphone_button_background"/>

    </LinearLayout>

    <!-- Кнопки "Матка" "Вулик" та "Примітки" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_small">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/queenBtn"
            android:text="@string/queen_button_text"
            style="@style/NavButton"
            android:layout_marginEnd="@dimen/spacing_small" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/hiveInfoBtn"
            android:text="@string/hive_info_title"
            style="@style/NavButton"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/notesBtn"
            android:text="@string/notes_button_text"
            style="@style/NavButton"
            android:layout_marginStart="@dimen/spacing_small" />
    </LinearLayout>

</LinearLayout>