<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Опції для Вулика"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/title_dark_green"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Опція: Редагувати назву -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/editNameCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/note_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Редагувати назву"
            android:textSize="16sp"
            android:textColor="@color/note_text_color"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Опція: Вибрати основний колір -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectColorCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/note_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Вибрати основний колір"
            android:textSize="16sp"
            android:textColor="@color/note_text_color"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Опція: Вибрати додатковий колір -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/selectSecondaryColorCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/note_border"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:id="@+id/selectSecondaryColorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Вибрати додатковий колір"
            android:textSize="16sp"
            android:textColor="@color/note_text_color"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Опція: Видалити вулик -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/deleteHiveCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/delete_button_color"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Видалити вулик"
            android:textSize="16sp"
            android:textColor="@color/delete_button_color"
            android:textStyle="bold"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
